/* miniprogram/pages/index/index.wxss */

.index-swiper {
  margin: 100rpx 20rpx 20rpx 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-swiper image {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.index-tab{
  display: flex;
}
.index-tab view{
  flex: 1;
  text-align: center;
  padding: 10rpx;
  margin: 10rpx;
}
.index-tab view.active{
  color: red;
  border-bottom: 1rpx red solid;
}
.index-list{
  display: flex;
  flex-wrap: wrap;
}
.index-list-item{
  width: 50%;
  margin: 10rpx 0;
  color: hotpink;
}
.index-list image{
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
}
.index-list-text{
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  width: 90%;
}